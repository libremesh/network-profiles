config lime system
    option hostname 'BCNmtjExposicions'
    option domain 'lan'
    option keep_on_upgrade 'libremesh base-files-essential /etc/sysupgrade.conf'

config lime network
    option primary_interface eth0
    option main_ipv4_address '10.1.104.161/21'
    option main_ipv6_address '2a00:1508:1:fe4c::104:161/64'
    list protocols ieee80211s
    list protocols adhoc
    list protocols lan
    list protocols batadv:%N1
    list protocols bmx6:12:8021q:_qmp
    list protocols bmx6:13
    list resolvers '10.1.104.2'
    option use_odhcpd true
    option bmx7_over_batman false
    option bmx7_pref_gw none
    option bmx7_mtu '1500'
    option bmx6_over_batman false
    option bmx6_pref_gw none
    option bmx6_mtu '1500'
    option anygw_mac "aa:aa:aa:%N1:%N2:aa"

config lime wifi
    option channel_2ghz '11'
    option channel_5ghz '48'
    option htmode_5ghz 'HT40'
    option distance '1000'
    list modes 'ap'
    list modes 'apname'
    list modes 'ieee80211s'
    list modes 'adhoc'
    option ap_ssid 'jardibotanic-test'
    option apname_ssid '%H'
    option adhoc_ssid 'libre-mesh'
    option adhoc_bssid '02:ca:ff:ee:ba:be'
    option adhoc_mcast_rate_2ghz '24000'
    option adhoc_mcast_rate_5ghz '6000'
    option ieee80211s_mesh_fwding '0'
    option ieee80211s_mesh_id 'LiMe'
